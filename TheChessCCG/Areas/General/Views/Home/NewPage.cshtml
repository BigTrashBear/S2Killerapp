<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8"/>

    <style type="text/css">
        .button1 {
            text-align:center;
            width: 200px;
            height: 25px;
            background-color: white;
        }
    </style>
    <script type="text/javascript">

        function getRandomColor() {
            var letters = '0123456789ABCDEF';
            var color = '#';
            for (var i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        function colour() {
            var canvas = document.createElement("canvas");
            canvas.id = "canvas";

            document.body.appendChild(canvas);

            if (canvas.getContext) {
                var ctx = canvas.getContext("2d");

                var grd = ctx.createLinearGradient(0, 0, 200, 0);
                grd.addColorStop(0, getRandomColor());
                grd.addColorStop(1, getRandomColor());

                ctx.fillStyle = grd;
                ctx.fillRect(10, 10, 500, 500);

                var txt = canvas.getContext("2d");
                txt.font = "30px Arial";
                txt.fillStyle = "#FFFFFF";

                txt.textAlign = "center";
                txt.fillText("Click me!", canvas.width / 2, canvas.height / 2);
                canvas.addEventListener("click", newcanvas, false);
            }
        }
        function newcanvas() {
            var canvas = document.createElement("canvas");
            canvas.id = "canvas";

            document.body.appendChild(canvas);

            if (canvas.getContext) {
                var ctx = canvas.getContext("2d");

                var grd = ctx.createLinearGradient(0, 0, 200, 0);
                grd.addColorStop(0, getRandomColor());
                grd.addColorStop(1, getRandomColor());

                ctx.fillStyle = grd;
                ctx.fillRect(10, 10, 500, 500)
            }
        }
    </script>

</head>
<body onload="colour();">

<h2>NewPage</h2>
<div><button class="button1" type="button" value="Go Back" onclick="location.href='@Url.Action("Index", "Home")'">Play with basic colours</button></div>

</body>
</html>
