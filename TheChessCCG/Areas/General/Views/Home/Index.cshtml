                //var grd = ctx.createLinearGradient(0, 0, 200, 0);
                //grd.addColorStop(0, getRandomColor());
                //grd.addColorStop(1, getRandomColor());

                ctx.fillStyle = getRandomColor();
                ctx.fillRect(10, 10, 500, 500)

                var txt = canvas.getContext("2d");
                txt.font = "30px Arial";
                txt.fillStyle = "#FFFFFF";

                txt.textAlign = "center";
                txt.fillText("Click me!", canvas.width / 2, canvas.height / 2);
                

                canvas.addEventListener("click", newcanvas, false);
            }
        }

